# Docker Compose が各コンテナに取り込む env ファイルの場所。
COMPOSE_ENV_FILE=.env

# ローカル docker compose が起動する PostgreSQL の設定。
POSTGRES_DB=gym_directory
POSTGRES_USER=appuser
POSTGRES_PASSWORD=apppass
POSTGRES_PORT=5432

# FastAPI / Alembic が利用する Async SQLAlchemy DSN。
DATABASE_URL=postgresql+asyncpg://appuser:apppass@db:5432/gym_directory

# 統合テスト用に利用する任意の Postgres（pg サービス）。
TEST_POSTGRES_DB=gym_test
TEST_POSTGRES_USER=postgres
TEST_POSTGRES_PASSWORD=pass
TEST_DATABASE_URL=postgresql+asyncpg://postgres:pass@pg:5432/gym_test

# アプリケーション実行時の設定。
APP_ENV=dev
APP_PORT=8000
LOG_LEVEL=INFO
ALLOW_ORIGINS=http://127.0.0.1:3000,http://localhost:3000
RATE_LIMIT_ENABLED=0

# 監視・トレーシング関連。
SENTRY_DSN=
SENTRY_TRACES_RATE=0.0
RELEASE=local-dev

# 検索スコア計算の重み。
SCORE_W_FRESH=0.6
SCORE_W_RICH=0.4
FRESHNESS_WINDOW_DAYS=365

# 外部サービスの API キーやトークン。
OPENCAGE_API_KEY=
ADMIN_UI_TOKEN=dev-admin-token

# Alembic 起動リトライの調整用。
ALEMBIC_STARTUP_MAX_ATTEMPTS=10
ALEMBIC_STARTUP_RETRY_SECONDS=2
ALEMBIC_EXIT_ON_FAILURE=0

# Next.js (frontend) で利用する公開 env。
NEXT_PUBLIC_API_BASE_URL=http://127.0.0.1:8000
NEXT_PUBLIC_AUTH_MODE=stub
# NEXT_PUBLIC_OAUTH_PROVIDER=github
# NEXT_PUBLIC_OAUTH_CLIENT_ID=
# NEXT_PUBLIC_OAUTH_REDIRECT_URI=http://127.0.0.1:3000/auth/callback
